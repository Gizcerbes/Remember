<resources xmlns:tools="http://schemas.android.com/tools">
	<!-- Base application theme. -->
	<style name="Theme.RememberCards" parent="Theme.MaterialComponents.DayNight.NoActionBar">
		<!-- Primary brand color. -->
		<item name="colorPrimary">@color/black</item>
		<item name="colorPrimaryVariant">@color/black</item>
		<item name="colorOnPrimary">@color/white</item>
		<!-- Secondary brand color. -->
		<item name="colorSecondary">@color/redwood</item>
		<item name="colorSecondaryVariant">@color/teal_700</item>
		<item name="colorOnSecondary">@color/black</item>
		<!-- Status bar color. -->
		<item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
		<!-- Customize your theme here. -->
	</style>

	<style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="iconPadding">0dp</item>
		<item name="android:insetTop">0dp</item>
		<item name="android:insetBottom">0dp</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:paddingRight">12dp</item>
		<item name="android:minWidth">48dp</item>
		<item name="android:minHeight">48dp</item>
	</style>

	<style name="Theme.AppBar" parent="Theme.MaterialComponents">
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="Theme.RememberCards.CardView.Button" parent="Widget.MaterialComponents.CardView">
		<item name="contentPadding">5dp</item>
		<item name="android:layout_marginStart">13dp</item>
		<item name="android:layout_marginEnd">13dp</item>
		<item name="android:layout_marginTop">7dp</item>
		<item name="android:layout_marginBottom">7dp</item>
		<item name="cardElevation">5dp</item>
		<item name="cardCornerRadius">10dp</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="Theme.RememberCards.CardView.Button.Negative" parent="Theme.RememberCards.CardView.Button">
		<item name="cardBackgroundColor">@color/btn_negative</item>
	</style>

	<style name="Theme.RememberCards.CardView.Button.Positive" parent="Theme.RememberCards.CardView.Button">
		<item name="cardBackgroundColor">@color/btn_positive</item>
	</style>

	<style name="Theme.RememberCards.CardView.Button.Icon" parent="Theme.RememberCards.CardView.Button">
		<item name="cardElevation">0dp</item>
		<item name="cardBackgroundColor">@color/transparent</item>
	</style>

	<style name="Theme.RememberCards.CardView" parent="Widget.MaterialComponents.CardView">
		<item name="contentPadding">13dp</item>
		<item name="contentPaddingTop">0dp</item>
		<item name="android:layout_marginStart">13dp</item>
		<item name="android:layout_marginEnd">13dp</item>
		<item name="android:layout_marginTop">7dp</item>
		<item name="android:layout_marginBottom">7dp</item>
		<item name="cardElevation">5dp</item>
		<item name="cardCornerRadius">10dp</item>
	</style>

	<style name="Theme.RememberCards.AppBar" parent="">
		<item name="android:layout_height">55dp</item>
		<item name="android:minHeight">55dp</item>
		<item name="android:layout_width">match_parent</item>
	</style>

</resources>