<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.uogames.remembercards.ui.views.PhraseView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:definition="defin"
        app:language_tag="eng"
        app:opened="true"
        app:phrase="Hdfsddf"
        app:show_button_add="true"
        app:show_button_download="true"
        app:show_button_edit="true"
        app:show_button_report="true"
        app:show_button_share="true"
        app:show_button_sound="true"
        app:show_button_stop="true"
        app:show_buttons="false"
        app:show_image="true"
        app:show_progress_loading="true" />

    <com.uogames.remembercards.ui.views.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:clue="ffddsds"
        app:definition_first="dsdgd"
        app:definition_second="fdsfdkl"
        app:language_tag_first="eng"
        app:language_tag_second="rus"
        app:opened="true"
        app:phrase_first="qwe"
        app:phrase_second="lggd"
        app:show_audio_first="true"
        app:show_audio_second="true"
        app:show_button_download="true"
        app:show_button_edit="true"
        app:show_button_report="true"
        app:show_button_share="true"
        app:show_button_stop="true"
        app:show_definition_first="true"
        app:show_definition_second="true"
        app:show_image_first="true"
        app:show_image_second="true"
        app:show_progress_loading="true" />

</LinearLayout>