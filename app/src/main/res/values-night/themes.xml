<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RememberCards" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/linen</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/redwood</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/redwood</item>
        <item name="colorSecondaryVariant">@color/redwood</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppBar" parent="Theme.MaterialComponents">
        <item name="android:textColor">@color/black</item>
    </style>

	<style name="Theme.RememberCards.CardView.Button.Negative" parent="Theme.RememberCards.CardView.Button">
		<item name="cardBackgroundColor">@color/btn_negative</item>
	</style>

</resources>