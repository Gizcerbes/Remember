<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:animateLayoutChanges="true">

	<RelativeLayout
		android:id="@+id/top_bar"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		style="@style/Theme.RememberCards.AppBar"
		app:layout_constraintBaseline_toTopOf="parent">

		<TextView
			android:id="@+id/txt_top_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginStart="13dp"
			android:text="@string/your_cards"
			android:textAppearance="?attr/textAppearanceHeadline6"
			android:layout_centerVertical="true" />

		<LinearLayout
			android:id="@+id/ll_buttons"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentEnd="true"
			android:layout_centerVertical="true">

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/btn_add"
				style="@style/Theme.RememberCards.CardView.Button.Positive"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content">

				<ImageView
					android:layout_width="@dimen/card_button"
					android:layout_height="@dimen/card_button"
					android:src="@drawable/ic_baseline_add_24" />

			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/btn_network"
				style="@style/Theme.RememberCards.CardView.Button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="0dp">

				<ImageView
					android:id="@+id/img_network"
					android:layout_width="@dimen/card_button"
					android:layout_height="@dimen/card_button"
					android:src="@drawable/ic_baseline_cloud_24" />

			</com.google.android.material.card.MaterialCardView>

			<com.google.android.material.card.MaterialCardView
				android:id="@+id/btn_search"
				style="@style/Theme.RememberCards.CardView.Button"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="0dp">

				<ImageView
					android:id="@+id/search_image"
					android:layout_width="@dimen/card_button"
					android:layout_height="@dimen/card_button"
					android:src="@drawable/ic_baseline_search_24" />

			</com.google.android.material.card.MaterialCardView>

		</LinearLayout>

		<com.google.android.material.divider.MaterialDivider
			android:id="@+id/bottom_divider"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/ll_buttons"
			app:layout_constraintBottom_toBottomOf="parent" />
	</RelativeLayout>

	<com.google.android.material.card.MaterialCardView
		android:id="@+id/cl_search_bar"
		style="@style/Theme.RememberCards.CardView"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/top_bar"
		app:contentPaddingBottom="7dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<com.google.android.material.textfield.TextInputLayout
				android:id="@+id/til_search"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
				android:hint="@string/search"
				android:visibility="visible"
				app:endIconMode="clear_text"
				app:expandedHintEnabled="false"
				app:startIconDrawable="@drawable/ic_baseline_search_24">

				<com.google.android.material.textfield.TextInputEditText
					android:layout_width="match_parent"
					android:layout_height="wrap_content" />

			</com.google.android.material.textfield.TextInputLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginEnd="7dp"
					android:textAppearance="?attr/textAppearanceBody1"
					android:gravity="center"
					android:text="@string/label_language" />

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/btn_lang"
					style="@style/Theme.RememberCards.CardView.Button"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_margin="3dp">

					<TextView
						android:id="@+id/tv_language"
						android:layout_width="match_parent"
						android:gravity="center"
						android:layout_height="match_parent"
						android:textAppearance="?attr/textAppearanceBody2"
						android:minWidth="50dp"
						android:text="@string/label_all" />

				</com.google.android.material.card.MaterialCardView>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginEnd="7dp"
					android:layout_marginStart="7dp"
					android:textAppearance="?attr/textAppearanceBody1"
					android:gravity="center"
					android:text="@string/label_country" />

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/btn_country"
					style="@style/Theme.RememberCards.CardView.Button"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					app:contentPadding="0dp"
					android:layout_margin="3dp">

					<ImageView
						android:id="@+id/img_flag"
						android:layout_width="wrap_content"
						android:layout_height="30dp"
						android:maxHeight="30dp"
						android:adjustViewBounds="true"
						android:src="@drawable/ic_baseline_add_24" />

				</com.google.android.material.card.MaterialCardView>

			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="7dp"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginEnd="7dp"
					android:textAppearance="?attr/textAppearanceBody1"
					android:gravity="center"
					android:text="@string/label_language" />

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/btn_lang_second"
					style="@style/Theme.RememberCards.CardView.Button"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					android:layout_margin="3dp">

					<TextView
						android:id="@+id/tv_language_second"
						android:layout_width="match_parent"
						android:gravity="center"
						android:layout_height="match_parent"
						android:textAppearance="?attr/textAppearanceBody2"
						android:minWidth="50dp"
						android:text="@string/label_all" />

				</com.google.android.material.card.MaterialCardView>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_marginEnd="7dp"
					android:layout_marginStart="7dp"
					android:textAppearance="?attr/textAppearanceBody1"
					android:gravity="center"
					android:text="@string/label_country" />

				<com.google.android.material.card.MaterialCardView
					android:id="@+id/btn_country_second"
					style="@style/Theme.RememberCards.CardView.Button"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="center"
					app:contentPadding="0dp"
					android:layout_margin="3dp">

					<ImageView
						android:id="@+id/img_flag_second"
						android:layout_width="wrap_content"
						android:layout_height="30dp"
						android:maxHeight="30dp"
						android:adjustViewBounds="true"
						android:src="@drawable/ic_baseline_add_24" />

				</com.google.android.material.card.MaterialCardView>

			</LinearLayout>

		</LinearLayout>

	</com.google.android.material.card.MaterialCardView>

	<androidx.recyclerview.widget.RecyclerView
		android:id="@+id/recycler"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_alignParentBottom="true"
		android:layout_below="@id/cl_search_bar"
		android:orientation="vertical"
		app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
		tools:listitem="@layout/card_card" />


	<TextView
		android:id="@+id/txt_book_empty"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_centerInParent="true"
		android:text="@string/here_is_empty" />


</RelativeLayout>